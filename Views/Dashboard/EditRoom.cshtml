@model Rooms

<div class="container">
    <h2 class="text-center mb-4">تعديل بيانات الغرفة</h2>
    <form asp-controller="Home" asp-action="Update" method="post">
        <input type="hidden" asp-for="@Model.Id" />

        <div class="mb-3">
            <label for="IdHotels" class="form-label">رقم الفندق</label>
            <input type="text" class="form-control" id="IdHotels" name="IdHotels" asp-for="@Model.IdHotels" readonly>
        </div>

        <div class="mb-3">
            <label for="Type" class="form-label">نوع الغرفة</label>
            <input type="text" class="form-control" id="Type" name="Type" asp-for="@Model.Type">
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">سعر الغرفة</label>
            <input type="number" class="form-control" id="Price" name="Price" asp-for="@Model.Price">
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
        </div>
    </form>
</div>
